{
  "name": "weasco",
  "version": "4.0.0",
  "description": "Weasco 4.0",
  "main": "main.js",
  "author": "RedTux",
  "license": "MIT",
  "dependencies": {
    "jspdf": "^2.5.1",
    "lucide": "^0.294.0",
